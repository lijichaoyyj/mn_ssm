<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
      namespace:全限定路径名确保唯一性(BlogMapper)
      id="selectBlog":select 和方法绑定.
 -->
<mapper namespace="com.it.cst.mapper.BlogMapper">
    <select id="selectBlog" resultType="com.it.cst.bean.Blog">
        select * from blog where id=#{id}
    </select>
</mapper>
